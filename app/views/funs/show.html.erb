<h1> SHOW ! </h1>
<div class="left-board">
<% if logged_in? %>
    <%= current_user.username %> <br>

        <% if current_user.username == @fun.player1.username %>
                <p> YOUR FIELD<p>

                <% @fun.board1.each do |row| %>
                <%= row %><br>
                <% end %>
                <br>
                <br>



                <p> ENEMY FIELD<p>

              <% @fun.board1_display.each do |row| %>
              <%= row %>
              <br>
              <% end %>

       <% end %>


      <% if current_user.username == @fun.player2.username %>
      <p> YOUR FIELD<p>

          <% @fun.board2.each do |row| %>
          <%= row %><br>
          <% end %>
          <br>
          <br>
          <p> ENEMY FIELD<p>
          <% @fun.board2_display.each do |row| %>
          <%= row %><br>

      <% end %>

      <% end %>
<% end %>
</div>
<div class="right-board">

  <% if logged_in? %>

          <% if current_user.username == @fun.player1.username %>
             <p>Form 1</p>
             <form action="/funs/<%= @fun.id %>" method="post">
               <input type="hidden" name="_method" value="PUT">

              X:<br>
              <input type="text" name="X"><br>
              Y:<br>
              <input type="text" name="Y">
              <input type="submit" value="FIRE!">
          </form>
          <% end %>
  <% end %>

  <% if logged_in? %>


          <form action="/funs/<%= @fun.id %>" method="post">
            <input type="hidden" name="_method" value="PUT">
            Ship Size: <input type='text' name='size_ship' /><br />
            Direction: <input type="text" name='direction' /><br />

            Starting Coords: <select name='s_p_x'>
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
            </select>
            <select name='s_p_y'>
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
            </select>
            <input type='submit' value="Place"/>

          </form>

          <% if current_user.username == @fun.player2.username %>
          <p>Form 2</p>
          <form action="/funs/<%= @fun.id %>" method="post">
            <input type="hidden" name="_method" value="PUT">
           X:<br>
           <input type="text" name="X"><br>
           Y:<br>
           <input type="text" name="Y">
           <input type="submit" value="FIRE!">
       </form>
          <% end %>
  <% end %>



</div>
