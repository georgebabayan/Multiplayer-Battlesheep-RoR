<%= form_for(@user, :html => { :class => "form" }) do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label "Confirm password" %><br>
  <%= f.password_field :password_confirmation %><br>
  <br>
  <%= f.submit %>
  <% end %>
